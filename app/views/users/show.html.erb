<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<div>
	<%= link_to "Edit profile", edit_user_path(current_user), class: "btn btn-primary" %>
  <%= link_to "Create class", createroom_path(current_user), class: "btn btn-primary" %>
	  <% if current_user.admin? %>
    | <%= link_to "Admin page", users_path,
                                  class: "btn btn-primary" %>
  <% end %>
    <div class="col-md-8">
    <% if @user.rooms.any? %>
      <h1>Classes</h1>
      <ol class="rooms">

        <%= render @rooms %>
      </ol>
    <% end %>
  </div>
</div>